<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<VBox alignment="CENTER" prefHeight="405.0" prefWidth="315.0" spacing="20.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tasks.task0.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <FlowPane prefHeight="69.0" prefWidth="275.0" style="-fx-background-color: #f3f3f3;">
        <children>
            <Label text="Сумма в чеке:">
                <font>
                    <Font size="16.0" />
                </font>
                <FlowPane.margin>
                    <Insets left="5.0" top="15.0" />
                </FlowPane.margin>
            </Label>
            <TextField fx:id="amountTextField">
                <FlowPane.margin>
                    <Insets left="15.0" top="15.0" />
                </FlowPane.margin>
            </TextField>
        </children>
        <padding>
            <Insets bottom="15.0" />
        </padding>
    </FlowPane>
    <Label text="Выберите процент чаевых">
        <font>
            <Font size="15.0" />
        </font>
    </Label>
    <HBox prefHeight="55.0" prefWidth="307.0" style="-fx-background-color: #f3f3f3;">
        <children>
            <Button fx:id="largeTipsButton" mnemonicParsing="false" prefHeight="31.0" prefWidth="85.0" style="-fx-background-color: #fed428;" text="15%" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </HBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Button>
            <Label fx:id="largeTipsLabel" style="-fx-background-color: #fff;" text="Расчёт: ">
                <HBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </HBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
        </children>
    </HBox>
    <HBox prefHeight="55.0" prefWidth="307.0" style="-fx-background-color: #f3f3f3;">
        <children>
            <Button fx:id="goodTipsButton" mnemonicParsing="false" prefHeight="31.0" prefWidth="85.0" style="-fx-background-color: #fed428;" text="10%">
                <font>
                    <Font size="15.0" />
                </font>
                <HBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </HBox.margin>
            </Button>
            <Label fx:id="goodTipsLabel" style="-fx-background-color: #fff;" text="Расчёт: ">
                <HBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </HBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
        </children>
    </HBox>
    <HBox style="-fx-background-color: #f3f3f3;">
        <children>
            <Button fx:id="badTipsButton" mnemonicParsing="false" prefHeight="31.0" prefWidth="85.0" style="-fx-background-color: #fed428;" text="3%">
                <font>
                    <Font size="15.0" />
                </font>
                <HBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </HBox.margin>
            </Button>
            <Label fx:id="badTipsLabel" style="-fx-background-color: #fff;" text="Расчёт: ">
                <HBox.margin>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </HBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
        </children>
    </HBox>

    <Label fx:id="welcomeText" />
    <Button fx:id="paymentButton" mnemonicParsing="false" prefHeight="44.0" prefWidth="307.0" style="-fx-background-color: #fed428;" text="Оплатить">
        <font>
            <Font size="20.0" />
        </font>
    </Button>
</VBox>