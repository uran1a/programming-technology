     <menus>
       <Menu mnemonicParsing="false" text="Файл">
         <items>
           <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Открыть" />
               <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" text="Сохранить" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
    <BorderPane prefHeight="200.0" prefWidth="563.0">
        <top>
            <HBox prefHeight="39.0" prefWidth="564.0" BorderPane.alignment="CENTER">
                <children>
